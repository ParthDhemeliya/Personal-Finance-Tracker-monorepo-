{
  "dashboard": {
    "id": null,
    "title": "Finance Tracker Logs",
    "tags": ["logs", "finance-tracker"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Log Volume",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(count_over_time({app=\"finance-tracker-backend\"}[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Error Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{app=\"finance-tracker-backend\"} |= \"error\" or {app=\"finance-tracker-backend\"} |= \"ERROR\"",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "HTTP Requests",
        "type": "logs",
        "targets": [
          {
            "expr": "{app=\"finance-tracker-backend\"} |~ \"(GET|POST|PUT|DELETE|PATCH)\"",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "All Application Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{app=\"finance-tracker-backend\"}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 12, "w": 24, "x": 0, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}